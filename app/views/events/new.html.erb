<h1>Events#new</h1>
<p>Find me in app/views/events/new.html.erb</p>

<h1>お申し込みフォーム</h1>

<div class="#">
  <div class="#">
    <ul class="#">
      <li class="#">お申し込みフォーム（入力画面）</li>
      <li class="#">お支払い（決済画面）</li>
      <li class="#">ご予約完了（完了画面）</li>
    </ul>
  </div>
</div>

<%# confirm_eventsは作成した確認画面  ordersはフォームオブヘクトで決済画面 %>
<%= form_with(model: @event, url:confirm_events_path, local: true) do |f| %>

  <div class="plan">
    <%= f.label :plan, 'コース' %>
    <%# <%= form.text_field :plan %> 
    <%# neme属性以外のオプションを追加した時は下記に記述に変わる %>
    <% plan_options = Plan.order(:id).map { |c| [c.name, c.id, data: { price: c.price }] } %>
    <%= f.select(:paln_id, plan_options, {class:"#", data:{select:0}, id:"#" }) %>
  </div>

  <div class="number">
    <%= f.label :num, '参加人数' %>
      <% num_options = Num.order(:id).map { |c| [c.name, c.id, data: { multiple: c.multiple }] } %>
    <%= f.select(:num_id, num_options, {class:"#", data:{select:0}, id:"#" }) %>

  </div>

  <div class="option">
    <%= f.label :option, 'オプション' %>
      <% plan_options = Option.order(:id).map { |c| [c.name, c.id, data: { price: c.price }] } %>
    <%= f.select(:paln_id, plan_options, {class:"#", data:{select:0}, id:"#" }) %>

  </div>

    <div class="plan_day">
    <%= f.label :start_time, 'ご希望日' %>
    <%= f.date_select :start_time %>
  </div>

  <div class="name">
    <%= f.label :name, '代表者名' %>
    <%= f.text_field :name %>
  </div>

  <div class="tel">
    <%= f.label :tel, '電話番号' %>
    <%= f.text_field :tel %>
  </div>

  <div class="price">
    <%= f.label :price, '値段' %>
    <%= f.text_field :price %>
  </div>

  <div class="submit">
    <%= f.submit "確認画面へ", class:"#" %>
  </div>

<% end %>